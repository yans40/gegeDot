{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": [
        "http://localhost:3003/hierarchical-tree-visualization.html",
        "http://localhost:3003/family.html",
        "http://localhost:3003/person-management.html"
      ],
      "startServerCommand": "cd frontend && python3 -m http.server 3003",
      "startServerReadyPattern": "Serving HTTP on",
      "startServerReadyTimeout": 10000
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.8}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["warn", {"minScore": 0.8}],
        "categories:seo": ["warn", {"minScore": 0.8}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
